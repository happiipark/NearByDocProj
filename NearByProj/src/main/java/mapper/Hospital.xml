<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.hospital">

	<select id="selectHospital" parameterType="String"
		resultType="Hospital">
	<![CDATA[
		select * from hospital where hemail=#{hemail}
	]]>
	</select>
	
	<insert id="insertHospital" parameterType="Hospital">
	<![CDATA[
	insert into hospital (hname, comnum, hemail,haddress,htel,department,hpassword) values (#{hname},#{comnum},#{hemail},#{haddress},#{htel},#{department},#{hpassword}) 
	]]>
	</insert>
</mapper>